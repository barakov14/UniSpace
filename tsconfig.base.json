{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@unispace/auth/data-access": ["libs/core/auth/data-access/src/index.ts"],
      "@unispace/auth/login": ["libs/core/auth/feature-login/src/index.ts"],
      "@unispace/auth/register": [
        "libs/core/auth/feature-register/src/index.ts"
      ],
      "@unispace/containers": ["libs/core/containers/src/index.ts"],
      "@unispace/http": ["libs/core/http-client/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
